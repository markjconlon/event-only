
<h1><%= @event.name %></h1>
<strong>City: <%= @event.city %></strong>
<p><%= @event.date %></p>

<%= link_to 'Edit', edit_event_path %>

<%= link_to 'Delete', event_path(@event), method: :delete, data: {confirm: "Are you sure you want to delete the location '#{@event.name}'? This cannot be undone!"} %>
